{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": [2, 2],
    "linebreak-style": [2, "unix"],
    "no-console": [0],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "space-before-function-paren": [2, "always"]
  }
}
